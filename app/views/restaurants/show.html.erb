<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <i class="fas fa-grin-alt"></i>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Links -->

    <%= link_to "All restaurants", restaurants_index_path, method: :get %>


    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
<h1>Here is the restaurant</h1>
<div class="col-md-3 offset-md-3">
<%= simple_form_for([@restaurant]) do |f| %>
  <%= f.input :name, label: 'Restaurant name:' %>
  <%= f.input :phone_number, label: 'Restaurant phone number:' %>
  <%= f.input :address, label: 'Restaurant address:' %>
  <%= f.input :category, label: 'Restaurant category:' %>
  <%= f.input :stars, label: 'Restaurant star rating:' %>
  <%= f.submit "update", class: "btn btn-primary" %>
<% end %>
</div>

<h2>Reviews:</h2>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>
<p><%= link_to "+ new review", new_restaurant_review_path(@restaurant), method: :get%></p>

<p><%= link_to 'Back', :back %></p>
